{% set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  paragraph.isPublished() ? null : 'paragraph--unpublished'
] %}
{% block paragraph %}
  <div{{ attributes.addClass(classes) }}>
    {% block content %}
      <ul class="accordion">
        <li>
          <button class="accordion-button" aria-expanded="false" aria-controls="paragraph-{{ paragraph.id() }}">
            {# Begin - heading #}
            {{ content.field_os2web_accordion_item_head }}
            {# End - heading #}
          </button>
          <div id="paragraph-{{ paragraph.id() }}" aria-hidden="true" class="accordion-content">
            {# Begin - heading #}
            {{ content.field_os2web_accordion_item_ref }}
            {# End - heading #}
          </div>
        </li>
      </ul>
    {% endblock %}
  </div>
{% endblock paragraph %}
