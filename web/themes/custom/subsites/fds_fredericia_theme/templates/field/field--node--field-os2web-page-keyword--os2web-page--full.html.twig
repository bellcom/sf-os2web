{%
  set classes = [
  'box',
  'field',
  'field--name-' ~ field_name|clean_class,
  'field--type-' ~ field_type|clean_class,
  'field--label-' ~ label_display,
]
%}
{%
  set title_classes = [
  'field__label',
  label_display == 'visually_hidden' ? 'visually-hidden',
]
%}

{% if label_hidden %}
  <div{{ attributes.addClass(classes) }}>
    <div class="box__body">
      <ul>
        {% for item in items %}
          <li{{ item.attributes }}>
            {{ item.content }}
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% else %}
  <div{{ attributes.addClass(classes) }}>
    <div class="box__heading"><h2 class="h3">{{ label }}</h2></div>
    <div class="box__body">
      <ul>
        {% for item in items %}
          <li{{ item.attributes }}>
            {{ item.content }}
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}
