<div class="os2web-citizen-proposals--wrapper">
  <div class="new-proposal-form">
    {{ new_proposal_form.form_build_id }}
    {{ new_proposal_form.form_id }}
    {{ new_proposal_form }}
  </div>

  <h1>{{ 'Proposals'|t }}</h1>
  <ul id="proposals-list" class="published-proposal-wrapper accordion">
    {% for proposal_item in published_proposals %}
      {% set proposal = proposal_item['proposal_node']  %}
      {% set vote_form = proposal_item['vote_form'] %}
      {% set votes_count = proposal_item['votes_count'] %}

      <li class="proposal" data-nid="{{ proposal.id }}">
        <button class="accordion-button js-accordion-add-link" aria-expanded="false" aria-controls="{{ proposal.id }}" id="label_{{ proposal.id }}">
          <div class="header">
            <span class="date">{{ proposal.getCreatedTime()|date("d M Y") }}</span>
            <span class="title">{{ proposal.label }}</span>
            <span class="votes">{{ votes_count }}</span>
          </div>
        </button>

        <div id="{{ proposal.id }}" aria-hidden="true" class="accordion-content">
          <div class="body">
            {{ proposal.field_os2web_cit_props_proposal.value }}
            <div class="author">Oprettet af {{ proposal.field_os2web_cit_props_name.value }}</div>
            <hr />

            <div class="vote_headline">Stem p√• dette forslag</div>
            {{ vote_form.form_build_id }}
            {{ vote_form.form_id }}
            {{ vote_form }}
          </div>
        </div>
      </li>
    {% endfor %}
  </ul>
</div>
