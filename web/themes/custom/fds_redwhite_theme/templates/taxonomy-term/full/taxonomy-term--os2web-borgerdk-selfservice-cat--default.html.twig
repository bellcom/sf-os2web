{%
  set classes = [
  'taxonomy-term',
  'spotbox',
  'spotbox--selfservice',
  'spotbox--centered-icon',
  'vocabulary-' ~ term.bundle|clean_class,
]
%}
<a href="{{ url }}" {{ attributes.setAttribute('id', 'taxonomy-term-' ~ term.id).addClass(classes) }}>
  <div class="row">
    <div class="col-2 col-sm-3">
      <div class="spotbox__image">
        {{ content.field_os2web_bdk_ss_cat_icon }}
      </div>
    </div>

    <div class="col-10 col-sm-9">
      <div class="spotbox__content">
        <div class="field--name-field-os2web-spotbox-heading">
          <h3 class="h4">{{ name }}</h3>
        </div>

        <div class="d-none d-sm-block">
          {{ content.description }}
        </div>
      </div>
    </div>
  </div>
</a>
