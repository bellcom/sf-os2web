{%
  set classes = [
  'field',
  'field--name-' ~ field_name|clean_class,
  'field--type-' ~ field_type|clean_class,
  'field--label-' ~ label_display,
]
%}

<div{{ attributes.addClass(classes, 'field__items') }}>
  {% set itemsCount = 0 %}
  {% for item in items %}
      {% set itemsCount = itemsCount + 1 %}
  {% endfor %}
  <div class="grid columns-{{itemsCount}}">
    {% for item in items %}
      {{ item.content }}
    {% endfor %}
  </div>
</div>
