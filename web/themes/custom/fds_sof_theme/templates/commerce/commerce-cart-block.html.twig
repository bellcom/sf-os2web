<div{{ attributes}}>
  <div class="cart-block--summary">
    {# 
      "cart-block--link__expand" class changed to "cart-block--link"
      expand is not updated/removed when you change "Display cart contents in a dropdown" to no
    #}
    <a class="cart-block--link" href="{{ url }}">
      <span class="cart-block--summary__icon"></span>
      <span class="cart-block--summary__count">{{ count_text }}</span>
      <span class="cart-block--summary__gotobasket"></span>
    </a>
  </div>
  {% if content %}
  <div class="cart-block--contents">
    <div class="cart-block--contents__inner">
      <div class="cart-block--contents__items">
        {{ content }}
      </div>
      <div class="cart-block--contents__links">
        {{ links }}
      </div>
    </div>
  </div>
  {% endif %}
</div>
