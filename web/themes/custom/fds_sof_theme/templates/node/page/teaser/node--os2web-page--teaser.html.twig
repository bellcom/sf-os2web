{%
  set classes = [
  node.bundle|clean_class,
  node.isPromoted() ? 'is-promoted',
  node.isSticky() ? 'is-sticky',
  not node.isPublished() ? 'is-unpublished',
  view_mode ? view_mode|clean_class,
]
%}
<div {{ attributes.addClass(classes) }} data-link-url="{{ url }}">
  <div class="entity-{{ view_mode|clean_class }}__image">
    {{ content.field_os2web_page_primaryimage }}
  </div>

  <div class="entity-{{ view_mode|clean_class }}__body">
    <div class="field--type-timestamp">{{ node.getChangedTime|date('d.m.Y') }}</div>
    {% if viewname == 'sektion_nyheder' %}
    <a href="{{ url }}" aria-label="{{ 'Read more about' | trans }} {{ node.field_os2web_page_heading.value }}">
      {{ content.field_os2web_page_heading }}
    </a>
    {% else %}
    {{ content.field_os2web_page_heading }}
    {% endif %}
    
    {# Begin - body #}
    <div class="field field--type-body">
      {{ content.field_os2web_page_intro }}
    </div>
    {# End - body #}

    <div class="field--type-link">
      <a href="{{ url }}" aria-label="{{ 'Read more about' | trans }} {{ node.field_os2web_page_heading.value }}">
        {{ 'Read more' | trans }}
      </a>
    </div>
  </div>
</div>
